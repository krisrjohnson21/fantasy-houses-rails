<h1>Show Page for <%= @house.name %> </h1>

<h4> <%= @house.source %> </h4>
<h4> <%= @house.author %> </h4>
<h4> <%= @house.motto %> </h4>

<h3> <%= @house.name %> Members </h3>
<ul>
  <% @members.each do |member| %>
    <li>
      <%= "#{member.first_name} #{member.last_name}" %>
      <%= member.created_at.strftime("%B %d %Y") %>
    </li>
  <% end %>
</ul>

<%= link_to "Add New House", new_house_path, class: "button" %>
<%= link_to "Add a House Member", new_house_member_path(@house), class: "button" %>
